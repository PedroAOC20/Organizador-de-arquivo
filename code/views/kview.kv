BoxLayout:
    orientation: 'vertical'
    padding: 30
    spacing: 20

    Label:
        text: 'Seja Bem-vindo ao Organizador de arquivos.\nNo campo abaixo pode clicar no botão ou digitar o caminho que deseja organizar os arquivos.'
        font_size: 20

    Label:
        id: label_status
        text: "Status:"  

    FloatLayout:
        size_hint_y: None
        height: 40

        TextInput:
            id: input_diretorio
            multiline: False
            size_hint_x: 0.8
            pos_hint: {'x': 0.2, 'y': 0}  # Posiciona o input à direita

        Button:
            text: 'Selecione a pasta'
            font_size: 18
            size_hint_x: 0.2
            pos_hint: {'x': 0, 'y': 0}  # Posiciona o botão à esquerda
            on_press: app.abrir_seletor_diretorio()

    Button:
        text: 'Clique aqui para Organizar Arquivos!'
        font_size: 22
        height: 60
        size_hint_x: 1.0
        size_hint_y: None
        on_press: app.organizar_arquivos()

<Popup>:
    title: 'Sucesso!'
    title_size: '14sp'
    size_hint: 0.75, 0.5
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        Label:
            id: popup_label
            text: ''
        Button:
            text: "Retomar"
            size_hint_y: None
            height: 50
            on_press: root.dismiss()
